  <h3 class="mb-5 mt-2 text-center">A Global Presence</h3>
  <div class="locations-container d-flex flex-wrap justify-content-around mt-3">
    <%= render "contact_item", {location: "Buenos Aires, Argentina", phone: " +54 9 11 5571 9154", photo:"Argentina.png" } %>
    <%= render "contact_item", {location: "Chicago, United States", phone: " +1 224 875 0500", photo:"USA.png" } %>
    <%= render "contact_item", {location: "Hong Kong, Hong Kong", phone: " +1 647 285 8516", photo:"Hong Kong.png" } %>
    <%= render "contact_item", {location: "Paris, France", phone: " +49 1516 461 2270", photo:"France.png" } %>
  </div>
</div>


