<div class="navbar-light navbar-lewagon navbar-border">

  <div class="logo-container">
    <%= link_to root_path, class: "navbar-brand" do %>
    <span> JRNLD </span>
  <% end %>
  </div>


  <div class="dropdown-container ml-auto">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">

          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
             <%= image_tag 'default-avatar.png', class: "avatar dropdown-toggle", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "New journal entry", new_entry_path, class: "dropdown-item" %>
            <%= link_to "View all entries", entries_path, class: "dropdown-item" %>
            <%= link_to "My analytics", analytics_path, class: "dropdown-item" %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <button class="dropdown-toggler" type="button" data-toggle="dropdown" id="navbarDropdown" aria-expanded="false" aria-haspopup="true">
            <i class="dropDown-icon fas fa-bars"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log-in", "/users/sign_in", class: "dropdown-item" %>
            <%= link_to "Sign-up", "/users/sign_up", class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
