<div class="container mt-5 pt-2 bg-white">
  <%= simple_form_for [@entry] do |f| %>
    <div class="d-flex flex-row w-100 py-3">
      <div class="col-lg-3 order-2 order-lg-1 reminder-divider">
        <div class="d-flex flex-row reminders-container pb-3">
          <span class="text-center mr-2">REMINDERS</span>
          <div class="d-flex flex-row flex-wrap justify-content-center">
            <% @reminders.each do |reminder| %>
              <button type="button" data-content="<%= JSON.generate({ id: reminder.id, title: reminder.title }) %>" class="btn btn-ghost btn-sm mb-2 mr-2 flex-grow-1" id="btn-reminder-<%= reminder.id %>" style="opacity: 0.7;"><%= reminder.title %></button>
            <% end %>
          </div>
        </div>

        <div class="d-flex flex-row tags-container pb-3 pt-3">
          <span class="text-center tag-label" style="margin-bottom: 10px;">TAGS</span>
          <%= f.association :tags, placeholder: 'Entry tags...', label: false, collection: current_user.tags.uniq.sort_by { |t| t.title }, input_html: { class: 'select2', multiple: "multiple"} %>
        </div>

      </div>

      <div class="col-lg-9 order-1 order-lg-2">
        <%= f.input :title, placeholder: 'Title', label: false, input_html: { class: 'form-control title-place borderless', autocomplete:"off" } %>
        <%= f.input :location, placeholder: 'Current location', label: false, input_html: { class: 'form-control auto-address no-border location-form borderless', id: "input-entry-page"  }, wrapper_html: { style: 'display: inline', id: "input-entry-page-icons" }%>
        <%= f.input :content, placeholder: 'What\'s on your mind?', label: false, input_html: { class: 'form-control borderless', rows: 5 } %>
        <%= f.hidden_field :start_entry %>

      <div class="d-flex justify-content-start">
        <div class="col pb-2">
          <ul class="feedback d-flex justify-content-start pl-2" id="emoji-list">
              <li class="angry">
                <div>
                  <svg class="eye left">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="eye right">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="mouth">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                      <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                    </svg>
                  </svg>
                </div>
              </li>
              <li class="sad">
                <div>
                  <svg class="eye left">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="eye right">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="mouth">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                      <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                    </svg>
                  </svg>
                </div>
              </li>
              <li class="ok">
                <div></div>
              </li>
              <li class="good active">
                <div>
                  <svg class="eye left">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="eye right">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="mouth">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                      <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                    </svg>
                  </svg>
                </div>
              </li>
              <li class="happy">
                <div>
                  <svg class="eye left">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                  <svg class="eye right">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                      <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                    </svg>
                  </svg>
                </div>
              </li>
            </ul>
            </div>
          <%= f.hidden_field :emoji, value: "good", id: "emoji-value"%>
          <%= f.button :submit, class: "btn btn-solid mb-4 mt-0" %>

      </div>
    </div>

  </div>
  <% end %>
</div>
















