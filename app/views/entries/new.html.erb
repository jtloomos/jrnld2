<br>

<div class="container p-3 mt-5">
  <div class="row row-cols-1 row-cols-lg-2 border rounded-sm p-3" id="new-entry">
    <div class="col-lg-3 order-2 order-lg-1">
      <p>Reminders:</p>
      <% @reminders.each do |reminder| %>
          <button type="button" data-content="<%= JSON.generate({ id: reminder.id, title: reminder.title }) %>" class="btn btn-ghost btn-sm mb-2" id="btn-reminder-<%= reminder.id %>"><%= reminder.title %></button>
      <% end %>
    </div>

    <div class="col-lg-9 order-1 order-lg-2">
      <%= simple_form_for [@entry] do |f| %>
        <%= f.association :tags, placeholder: 'Entry tags...', collection: current_user.tags.uniq, input_html: { class: 'select2', multiple: "multiple", id: 'entry-tags-div' } %> <!--NEED TO FILTER for current user -->
        <%= f.input :title, placeholder: 'Title...', label: false, input_html: { class: 'form-control' } %>
        <%= f.input :content, placeholder: 'What\'s on your mind?', label: false, input_html: { class: 'form-control', rows: 5 } %>
        <%= f.hidden_field :start_entry %>
        <%= f.input :emoji, label: false, collection: ["Happy", "Neutral", "Sad", "Angry"] %>
        <%= f.input :location, placeholder: 'Current location', label: false, input_html: { class: 'form-control auto-address' } %>
        <%= f.button :submit, class: "btn btn-solid" %>
      <% end %>
    </div>
  </div>
</div>
