<br>

<div class="container my-5 px-5 pt-5 pb-5" id="new-edit-entry">
  <div>
    <%= simple_form_for [@entry] do |f| %>
      <div class="d-flex">
        <%= f.input :title, label: false, input_html: { class: 'form-control title flex-grow-1' } %>
        <%= link_to '<i class="far fa-trash-alt p-2"></i>'.html_safe, entries_path %>
      </div>
      <%= f.input :content, label: false, input_html: { class: 'form-control', rows: 5 } %>
      <div class="row row-cols-1 row-cols-md-2">
        <div class="col pb-2">
          <%= f.input :location, label: false, input_html: { class: 'form-control auto-address', id: "input-entry-page-edit" } %>
        </div>
        <div class="col pb-2">
          <ul class="feedback d-flex justify-content-start justify-content-md-end pl-2" id="emoji-list">
            <li class="angry">
              <div>
                <svg class="eye left">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="eye right">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="mouth">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                    <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                  </svg>
                </svg>
              </div>
            </li>
            <li class="sad">
              <div>
                <svg class="eye left">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="eye right">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="mouth">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                    <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                  </svg>
                </svg>
              </div>
            </li>
            <li class="ok">
              <div></div>
            </li>
            <li class="good active">
              <div>
                <svg class="eye left">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="eye right">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="mouth">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 7" id="mouth">
                    <path d="M1,5.5 C3.66666667,2.5 6.33333333,1 9,1 C11.6666667,1 14.3333333,2.5 17,5.5"></path>
                  </svg>
                </svg>
              </div>
            </li>
            <li class="happy">
              <div>
                <svg class="eye left">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
                <svg class="eye right">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 4" id="eye">
                    <path d="M1,1 C1.83333333,2.16666667 2.66666667,2.75 3.5,2.75 C4.33333333,2.75 5.16666667,2.16666667 6,1"></path>
                  </svg>
                </svg>
              </div>
            </li>
          </ul>
          </div>
        </div>
        <%= f.hidden_field :emoji, value: "good", id: "emoji-value"%>
        <%= f.association :tags, label: false, collection: current_user.tags.uniq, input_html: { class: 'select2', multiple: "multiple", id: 'entry-tags-div' } %> <!--NEED TO FILTER for current user -->
      <div class="d-flex justify-content-end">
        <%= link_to "Cancel", entry_path(@entry), class: 'btn btn-ghost ml-2' %>
        <%= f.button :submit, class: "btn btn-solid" %>
      </div>
    <% end %>
  </div>
</div>
