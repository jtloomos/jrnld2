<div class="entry-page-body mt-5 p-3">

  <div class="container-fluid d-flex flex-row large-card bg-white p-0">
    <div class="analytics-container col-lg-3 d-flex flex-column justify-content-start p-3">
      <h4 class="text-center">Analytics</h4>
      <span class="text-center mt-2"><i class="fas fa-clock"></i> 25:03 min. | <i class="fas fa-hashtag"></i> 2,1400 words</span>
      <div class="d-flex flex-column justify-content-center mt-4">
        <div class="d-flex flex-row justify-content-center">
          <%= pie_chart ({"Blue is pretty!"=>4,
 "What a day"=>2,
 "The REAL Mac Daddy"=>1 }) %>
        </div>
      </div>

    </div>

    <div class="col-lg-9 p-3">
      <div class="row justify-content-between mb-3 flex-wrap">
        <div class="p-3 d-flex flex-column justify-content-start">
          <div class="d-flex justify-content-start align-items-center">
            <h4 class="mb-2 mr-3"><i class="far fa-calendar-check" style="font-size: 30px;"></i> <%= @entry.created_at.strftime("%B %d, %Y") %></h4>
            <%= render "shared/emoji", entry: @entry, margin_bottom: 2 %>
          </div>
          <div class="d-flex justify-content-end align-items-center flex-wrap mb-4">
            <% @entry.entry_tags.each do |entry_tag| %>
              <div class="tag px-2 mr-1 mt-1">
                <span><%= Tag.find(entry_tag.tag_id).title %></span>
              </div>
            <% end %>
          </div>
        </div>
        <div class="pr-3 col-lg-6 col-xs-12" style="width: 100%; height: 150px">
          <div id="map" class="col-12 px-0 rounded shadow" style="width: 100%; height: 100%;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
          <div class="m-3 entry-location d-flex justify-content-center">
            <span><i class="fas fa-thumbtack"></i> <%= @entry.location %></span>
          </div>
        </div>
      </div>
      <br>
      <div class="entry-title mt-3">
            <h1 class="pt-0"><%= @entry.title %></h1>
          </div>
      <div class="entry-text mt-1">
        <span><em><%= @entry.content %></em></span>
      </div>
      <div class="row d-flex justify-content-between mt-3 p-3">
        <span class="entries-return btn-solid"><%= link_to "Edit this entry", edit_entry_path(@entry) %></span>
        <span class="entries-return btn-solid"><%= link_to "Return to all entries", entries_path %></span>
      </div>
    </div>
    </div>

  </div>





  <div class="individual-entry-container mb-4">
    <br>
    <h2 class="text-center mt-4 pb-2" style="color:#891B00">My Journal</h2>

  </div>
</div>
